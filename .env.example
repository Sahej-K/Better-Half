# Server
APP_ENV=local
API_HOST=0.0.0.0
API_PORT=8000

# Relational DB
# Option 1: SQLite (development)
SQLALCHEMY_DATABASE_URL=sqlite+aiosqlite:///./app.db

# Option 2: PostgreSQL (production)
# SQLALCHEMY_DATABASE_URL=postgresql+psycopg2://chefgenie:chefgenie_password@postgres:5432/chefgenie

# Vector DB (Chroma persists locally)
VECTOR_DB_DIR=./chroma_store

# LLM Provider: "openai" or "azure"
LLM_PROVIDER=openai

# OpenAI settings
OPENAI_API_KEY=your_openai_key
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBED_MODEL=text-embedding-3-small

# Azure OpenAI (if using Azure)
AZURE_OPENAI_API_KEY=your_azure_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_EMBED_DEPLOYMENT=text-embedding-3-small

# Vision
VISION_PROVIDER=openai  # same provider; uses vision via chat model
